<robot name="plane">
  <link name="plane_base_link">
    <contact>
      <lateral_friction value="0.5"/>
      <rolling_friction value="0.0"/>
      <contact_cfm value="0.0"/>
      <contact_erp value="1.0"/>
    </contact>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.3 0.3 0.01"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.3 0.3 0.01"/>
      </geometry>
    </collision>
  </link>
  <link name="graspable_plane_link">
    <visual>
      <geometry>
        <box size="0.20 0.20 0.01"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="green">
        <color rgba="0 1 0 0.5"/>
      </material>
    </visual>
  </link>
  <joint name="visual_joint" type="fixed">
    <parent link="plane_base_link"/>
    <child link="graspable_plane_link"/>
    <origin xyz="0 0 0.001" rpy="0 0 0"/>
  </joint>
</robot>
